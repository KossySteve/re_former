<h1>Edit your any of your details</h1>

<% if @user.errors.any? %>
        <h3> Your details may have the following erros such as</h3>
        <ul>
        <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
        </ul>
<% end %>

<%= form_for @user do |f| %>
    <p>
        <%= f.label :username %><br/>
        <%= f.text_field :username%>
    </p>
    <p>
        <%= f.label :email %><br/>
        <%= f.text_field :email%>
    </p>
    <p>
        <%= f.label :password %><br/>
        <%= f.text_field :password%>
    </p>
    <p>
        <%= f.submit%>
    </p>
    
<% end%>
